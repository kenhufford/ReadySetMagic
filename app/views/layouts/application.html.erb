<!DOCTYPE html>
<html>
  <head>
    <title>GameSetMagic</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    
    <% if current_user %>
      <script>
        window.currentUser = <%= render(
      "api/users/user.json.jbuilder",
      user: current_user
      ).html_safe %>
      </script>
    <% end %>
    

    <script src="https://kit.fontawesome.com/e2de4b3feb.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
